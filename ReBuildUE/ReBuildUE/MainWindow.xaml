<Window x:Class="ReBuildUE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReBuildUE"
        Icon=".\Icon ReBuildUE4.ico"
        mc:Ignorable="d"
        Title="ReBuilder Unreal Engine 4" Height="190.5" Width="522.5" MaxHeight="190.5" MaxWidth="522.5" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="PathBox" HorizontalAlignment="Left" Height="22" Margin="30,30,0,0" TextWrapping="Wrap" FontStyle="Italic" Text="Path Project..." VerticalAlignment="Top" Width="416" Opacity="0.5"/>
        <Button x:Name="ConfirmButton" Content="Rebuild !" HorizontalAlignment="Left" Margin="60,90,0,0" VerticalAlignment="Top" Width="116" Height="30" Click="OnClickConfirmButton"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="200,90,0,0" VerticalAlignment="Top" Width="116" Height="30" Click="OnClickCancelButton"/>
        <Label x:Name="Label" Content="Powered by RedWilliax" HorizontalAlignment="Left" Margin="394,126,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Button x:Name="ResearchButton" Content="..." HorizontalAlignment="Left" Margin="451,30,0,0" VerticalAlignment="Top" Width="17" Height="22" Click="OnClickResearchButton"/>

    </Grid>
</Window>
